<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%=t('messages.listing', model: @admins.model_name.human(count: 2))%></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%=translate_attribute(@admins, :email)%></th>
                <th>
                    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do%>
                    <span>N</span>          
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody>
        
        <% @admins.each do |admin| %>
            <tr>
                <td><%=admin.id%></th>
                <td><%=admin.email%></td>
                <td style="width: 10p x">
                <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle btn-sm" do%>
                <span>E</span>               
                <% end %>
                </td>
                <td style="width: 10px">
                <%= link_to admins_backoffice_admin_path(admin),
                method: :delete , class:"btn btn-danger btn-circle btn-sm",
                data: { confirm: (t('messages.confirm', item: admin.email)) } do%>
                <span>D</span>               
                <% end %>
                </td>
            </tr>
        <% end %>      
        </tbody>
    </table>
    <div class="flexBox" style="display: flex; flex-flow: row wrap; justify-content: center;">
        <%= paginate @admins%>
    </div>
</div>

